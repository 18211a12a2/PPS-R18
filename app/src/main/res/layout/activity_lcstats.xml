<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_app_bg"
    tools:context=".lcstats">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text="@string/loop"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="normal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button77"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="264dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="@drawable/buttoncolor"
            android:textColor="#FFFFFF"
            android:text="WHILE"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button78"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttoncolor"
            android:gravity="center"
            android:text="DO-WHILE"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/button77"
            app:layout_constraintStart_toStartOf="@+id/button77"
            app:layout_constraintTop_toBottomOf="@+id/button77" />

        <Button
            android:id="@+id/button79"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttoncolor"
            android:gravity="center"
            android:text="FOR"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/button78"
            app:layout_constraintStart_toStartOf="@+id/button78"
            app:layout_constraintTop_toBottomOf="@+id/button78" />

        <Button
            android:id="@+id/button80"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttoncolor"
            android:gravity="center"
            android:text="CONTINUE"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/button79"
            app:layout_constraintStart_toStartOf="@+id/button79"
            app:layout_constraintTop_toBottomOf="@+id/button79" />

        <Button
            android:id="@+id/button81"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttoncolor"
            android:gravity="center"
            android:text="BREAK"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/button80"
            app:layout_constraintStart_toStartOf="@+id/button80"
            app:layout_constraintTop_toBottomOf="@+id/button80" />

        <Button
            android:id="@+id/button82"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttoncolor"
            android:gravity="center"
            android:text="GOTO"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/button81"
            app:layout_constraintStart_toStartOf="@+id/button81"
            app:layout_constraintTop_toBottomOf="@+id/button81" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>